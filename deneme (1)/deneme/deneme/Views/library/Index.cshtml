@model IEnumerable<deneme.Models.library>

@{
    ViewBag.Title = "Index";
}
<body style="background-color:black;color:aqua">
    <h2>Library</h2>

    <p style=" color:blue;margin-left :1000px;">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.constructionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address.doorNumber)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style=" color:white">
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.constructionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.workTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address.doorNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.kuId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.kuId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.kuId })
                </td>
            </tr>
        }

    </table>
</body>